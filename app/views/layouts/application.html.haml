!!!
%html{:lang => 'en', :prefix => 'og: http://ogp.me/ns# fb: http://www.facebook.com/2008/fbml', :dir => 'ltr'}
  %head
    %title Micro Loan Application
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0", :name => "viewport"}/

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

    %link{:href => "https://fonts.googleapis.com/css?family=Open+Sans|Roboto+Condensed|Oxygen|Scope+One", :rel => "stylesheet"}/

  %body
    = render 'partials/notification'
    = render 'partials/application_nav_bar'
    .uk-container.uk-container-center
      %h1.uk-article-title= @user[:title].to_s
      .uk-grid{"data-uk-grid-margin" => ""}
        .uk-width-medium-1-4.uk-hidden-small
          %ul.uk-list.uk-list-line
            %li
              %a{:href => "account/details"} Account Details
            %li
              %a{:href => "account/referrals"} Referrals
            %li
              %a{:href => "account/loans"} Loans
            %li
              %a{:href => "account/privacy"} Privacy
        .uk-width-medium-3-4
          = yield

